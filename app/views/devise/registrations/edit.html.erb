<h2 style="text-align: center;">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, style: "width: 60%; margin-left: 20%;" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <!--end div col md 6-->
    <div class="col-md-6">
      <%= f.fields_for :profile do |p| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= p.text_field :name,
            placeholder: t("devise.registrations.name"),
            class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :birthday %>
          <%= p.datetime_select :birthday, placeholder: "Age" %>
        </div>
        <div class="form-group">
          <%= f.label :address %>
          <%= p.text_area :address,
            placeholder: "Address",
            class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= p.telephone_field :phone_number,
            placeholder: "Phone number",
            class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= p.text_field :description,
            placeholder: "Description",
            class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :avatar %>
          <%= p.file_field :avatar, class: "custom-file-input" %>
        </div>
      <% end %>
    </div>
    <!--end div col md 6-->

  <br />
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<div style="margin-left: 20%">

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
